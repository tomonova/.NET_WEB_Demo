@model RWA_User.Models.TimeSheet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ERVLayout.cshtml";
}
@using (Html.BeginForm("Edit","TimeSheet",FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="container">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Project</th>
                <th scope="col">Work hours</th>
                <th scope="col">Overtime hours</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.TSRows.Count; i++)
            {
                @Html.HiddenFor(m => Model.TSRows[i].ID)
                @Html.HiddenFor(m => Model.TSRows[i].ProjectID)
                <tr>
                    <td> @Html.LabelFor(m => Model.TSRows[i].Project)</td>
                    <td>@Html.TextAreaFor(m => Model.TSRows[i].WorkHours)</td>
                    <td>@Html.TextAreaFor(m => Model.TSRows[i].OverTimeHours)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</div>
}


@model RWA_User.Models.TimeSheetReportViewModel

@{
    ViewBag.Title = "ReportSearch";
    Layout = "~/Views/Shared/_ERVLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="form-group">
                <label class="mt-3">Start date: </label>
                @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @readonly = "true", @class = "datepicker mr-3 form-control", placeholder = "choose start date" } })
            </div>
            <div class="form-group">
                <label class="mt-3 ml-3">End date: </label>
                @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @readonly = "true", @class = "datepicker ml-3 form-control", placeholder = "choose end date" } })
            </div>
            <div class="form-group">
                <input type="submit" value="Show Time Sheets" class="btn btn-primary ml-5 mt-5" />
            </div>
        </div>

        @if (TempData["CheckReportRange"] != null)
        {
            <div class="alert alert-warning mt-5" role="alert">
                @TempData["CheckReportRange"].ToString()
            </div>
        }
    </div>

}


@section scripts{
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeMonth: true,
                changeYear: true,
                yearRange: "-2:+2"
            });
        });
    </script>
}

